container_commands:
  01_set_storage_permissions:
    command: |
      # Set ownership and permissions for storage and bootstrap/cache (staging only)
      chown -R webapp:webapp /var/app/staging/storage /var/app/staging/bootstrap/cache
      find /var/app/staging/storage -type d -exec chmod 775 {} \;
      find /var/app/staging/storage -type f -exec chmod 664 {} \;
      chmod -R 775 /var/app/staging/bootstrap/cache